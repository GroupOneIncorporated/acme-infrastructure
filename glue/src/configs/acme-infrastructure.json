{
  "tfstatePath": "../terraform/terraform.tfstate",
  "nodeTypes": [
    {
      "name": "k8s_master",
      "isMaster": true,
      "user": "debian"
    },
    {
      "name": "k8s_node",
      "isMaster": false,
      "user": "debian"
    }
  ],
  "ssh": {
    "configPath": "../configs/ssh_config",
    "user": "debian"
  },
  "ansible": {
    "hostsPath": "../ansible/hosts"
  },
  "rke": {
    "configPath": "../rke/cluster.yml",
    "bastionHost": {
      "host": "k8s-master-1",
      "user": "debian",
      "port": 22
    },
    "config": {
      "ssh_key_path":"~/.ssh/GroupOneInc.pem",
      "nodes": [],
      "services": {
        "etcd": {
          "snapshot": true,
          "creation": "6h",
          "retention": "24h"
        },
        "kubelet": {
          "extra_args": {
            "cloud-provider": "external"
          }
        }
      },
      "network": {
        "plugin": "canal"
      },
      "authentication": {
        "strategy": "x509"
      },
      "authorization": {
        "mode": "rbac"
      },
      "ingress": {
        "provider": "none"
      },
      "bastion_host": {
        "address":"k8s-master-1",
        "user":"debian",
        "port": 22
      }
    }
  }
}