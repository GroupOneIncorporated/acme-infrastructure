{
  "builders": [
    {
      "type": "openstack",
      "image_name": "GroupOneInc-Debian9-Monitoring",
      "source_image_name": "Debian 9",
      "flavor": "c1-r2-d5",
      "ssh_username": "debian",
      
      "networks": ["a5f5f42c-e82c-44c1-9853-8b2c467a865c"],
      "floating_ip_network": "fd401e50-9484-4883-9672-a2814089528c",
      "availability_zone": "Education",
      "security_groups": [
        "default",
        "k8s_secgroup"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../prometheus/",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "inline": [
        "cd /tmp/prometheus",
        "sudo chmod +x ./install_prometheus.sh",
        "./install_prometheus.sh",
        
        "cd /tmp/grafana",
        "sudo chmod +x ./install_grafana.sh",
        "./install_grafana.sh",
        
        "cd /tmp/alertManager",
        "sudo chmod +x ./install_alertmanager.sh",
        "./install_alertmanager.sh"
      ]
    }
  ]
}
